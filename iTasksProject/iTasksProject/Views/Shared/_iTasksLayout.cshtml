<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        <link rel="stylesheet" href="@Url.Content("~/Content/iTasksTemplate/")css/owl.carousel.css">
        <link rel="stylesheet" href="@Url.Content("~/Content/iTasksTemplate/")css/bootstrap.min.css">
        <link rel="stylesheet" href="@Url.Content("~/Content/iTasksTemplate/")css/font-awesome.min.css">
        <link rel="stylesheet" href="@Url.Content("~/Content/iTasksTemplate/")css/style.css">
        <link rel="stylesheet" href="@Url.Content("~/Content/iTasksTemplate/")css/ionicons.min.css">
        <link rel="stylesheet" href="@Url.Content("~/Content/iTasksTemplate/")css/animate.css">
        <link rel="stylesheet" href="@Url.Content("~/Content/iTasksTemplate/")css/responsive.css">
       

        <script src="@Url.Content("~/Content/iTasksTemplate/")js/vendor/modernizr-2.6.2.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.10.2.min.js"><\/script>')</script>
        <script src="@Url.Content("~/Content/iTasksTemplate/")js/bootstrap.min.js"></script>
        <script src="@Url.Content("~/Content/iTasksTemplate/")js/owl.carousel.min.js"></script>
        <script src="@Url.Content("~/Content/iTasksTemplate/")js/plugins.js"></script>
        <script src="@Url.Content("~/Content/iTasksTemplate/")js/min/waypoints.min.js"></script>
        <script src="@Url.Content("~/Content/iTasksTemplate/")js/jquery.counterup.js"></script>
        <script src="@Url.Content("~/Content/iTasksTemplate/")js/main.js"></script>
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <header>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <nav class="navbar navbar-default navbar-static-top">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                    <a class="navbar-brand" href="index.html">
                                        <img height="44"  src="@Url.Content("~/Content/iTasksTemplate/")img/iTasksLogo001.png" alt="Logo">
                                    </a>
                                </div>
                                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                    <ul class="nav navbar-nav navbar-right">
                                        <li>@Html.ActionLink("Home", "Index" , "Home")</li>
                                        <li>@Html.ActionLink("Contact", "Contact" ,"Home" )</li>
                                        @Html.Partial("_LoginPartial")
                                        <li>
                                            <div style="padding:3px 0 0 10px; " class="btn-group" data-toggle="buttons">
                                              <label class="btn btn-success active ">
                                                  <input type="radio" />en</label>
                                              <label class="btn btn-success ">
                                                  <input type="radio" />tr</label>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        <div class="body" >@RenderBody()</div>
        
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <p>Copyright &copy; Designed by @Html.ActionLink("iTasks.com","Index","Home")</p>
                    </div>
                </div>
            </div>
        </footer>
        @RenderSection("scripts", required: false)
    </body>
</html>