@using Microsoft.AspNet.Identity
@using iTasksProject.Resources
@if (Request.IsAuthenticated)
{
    
    <li>
        @Html.ActionLink(User.Identity.GetUserName().Split(' ')[0], "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li>
        @Html.ActionLink(lang.MyTasks, "Index", "iTasks")
    </li>
    <li>@Html.ActionLink(lang.Logoff, "LogOff", "Account")</li>
    if (User.IsInRole("admin"))
    {
    <li>@Html.ActionLink(lang.Manage, "Index", "Admin")</li>
    }

}
else
{
    <li>@Html.ActionLink(lang.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li>@Html.ActionLink(lang.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}
